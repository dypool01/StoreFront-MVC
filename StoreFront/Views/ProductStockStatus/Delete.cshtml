<h3 class="text-danger">This action is permanent.</h3>
<div>
    <h4>ProductStockStatus</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LimitedStock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LimitedStock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReStocking)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReStocking)
        </dd>
