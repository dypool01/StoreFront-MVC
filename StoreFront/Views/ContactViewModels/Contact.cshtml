@*
    This is a model declaration. Each View can only have ONE model tied to it.
    The model declaration ensures this View knows how to display & send information
    using the provided model.
*@

@model StoreFront.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<h1>@ViewData["Title"]</h1>

<hr />

<!-- ======= Main ======= -->
<main id="main">

@*    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Contact Form</h2>
                <ol>
                    @* ActionLink Shorthand: Html.ActionLink("Link Text", "Action", "Controller") 
                    <li>@Html.ActionLink("Home","Index","Home")</li>
                    <li>Contact Form</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->*@
    <!-- ======= Contact Section ======= -->
    <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
        <div class="container">

            <div class="section-title">
                <h2>Contact Form</h2>
                <p>This application features a fully-functional contact form. To create this form, I built controller actions (one using HttpGet to load the form, and another using HttpPost to collect &amp; process the user's information), a ContactViewModel (to assist with data processing), and a confirmation View (where the application will send the user upon successful form submission). You will also need to enable email on your hosting provider (SmarterASP) and store the email login credentials in an external file (appsettings.json).</p>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="row">
                    <p style="color: red; font-style: italic;">
                        @Html.Raw(ViewBag.ErrorMessage)
                    </p>
                </div>
            }


            <div class="row">

                <div class="col-lg-6">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="info-box">
                                <i class="bx bx-map"></i>
                                <h3>Address</h3>
                                <p>321 Building C, NotA St. NoWheresVille, USA</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bx bx-envelope"></i>
                                <h3>Email</h3>
                                <p>dypool01@wsc.edu</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bx bx-phone-call"></i>
                                <h3>Phone</h3>
                                <p>+1 123 456 7890</p>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-lg-6">
                    <form asp-action="Contact" class="php-email-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            @*<label asp-for="Name" class="control-label"></label>*@
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            @* <label asp-for="Email" class="control-label"></label>*@
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            @*<label asp-for="Subject" class="control-label"></label>*@
                            <input asp-for="Subject" class="form-control" placeholder="Subject" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            @*<label asp-for="Message" class="control-label"></label>*@
                            <textarea asp-for="Message" class="form-control" placeholder="Message"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Send Message" class="btn btn-primary" />
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </section><!-- End Contact Section -->
@*    <!-- ======= Map Section ======= -->
    <section class="map mt-2">
        <div class="container-fluid p-0">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3102.274884998462!2d-94.60958528389634!3d38.96339085065514!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c0e925e366ed0f%3A0x73aec4617abd2f03!2sCentriq%20Training!5e0!3m2!1sen!2sus!4v1630519113795!5m2!1sen!2sus" frameborder="0" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </section><!-- End Map Section -->*@

</main><!-- End #main -->
@section Scripts {

@*    <!-- jQuery Library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>*@

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
